<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <TabHost
                android:id="@+id/tab_host"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--THIS TAB WIDGET SHOULD BE ABOVE THE FRAME LAYOUT -->
                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/tab_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scrollbars="vertical" />

                            <FrameLayout
                                android:id="@+id/bottom_bar_reveal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:visibility="gone">

                                <RelativeLayout
                                    android:id="@+id/bottom_bar_container"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:visibility="invisible">

                                    <ImageView
                                        android:id="@+id/bottom_bar_album_art"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_alignParentStart="true"
                                        android:background="#FF000000"
                                        android:scaleType="centerInside"
                                        android:contentDescription="@string/the_image_of_the_song"
                                        android:src="@drawable/default_picture" />

                                    <ProgressBar
                                        android:id="@+id/song_progress"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@id/bottom_bar_album_art" />

                                    <RelativeLayout
                                        android:id="@+id/bottom_bar_open"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/transparent"
                                        android:gravity="end|right|center_vertical">

                                        <ImageButton
                                            android:id="@+id/bottom_bar_play_stop"
                                            android:layout_width="44dp"
                                            android:layout_height="44dp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_marginEnd="8dp"
                                            android:background="#FFF"
                                            android:padding="4dp"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_play" />
                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/bottom_bar_song_artist"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/bottom_bar_song_title"
                                        android:layout_toEndOf="@id/bottom_bar_album_art"
                                        android:ellipsize="marquee"
                                        android:marqueeRepeatLimit="marquee_forever"
                                        android:scrollHorizontally="true"
                                        android:singleLine="true"
                                        android:text="Song artist"
                                        android:textColor="#FF000000"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/bottom_bar_song_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/song_progress"
                                        android:layout_toEndOf="@id/bottom_bar_album_art"
                                        android:ellipsize="marquee"
                                        android:marqueeRepeatLimit="marquee_forever"
                                        android:scrollHorizontally="true"
                                        android:singleLine="true"
                                        android:text="Song title"
                                        android:textColor="#FF000000"
                                        android:textSize="14sp" />

                                </RelativeLayout>

                            </FrameLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/tab_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Album"
                                android:textColor="@color/colorPrimary"
                                android:textSize="21sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TabWidget>
                </LinearLayout>
            </TabHost>
        </RelativeLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/nav_menu" />

    </android.support.v4.widget.DrawerLayout>

</android.support.design.widget.CoordinatorLayout>
